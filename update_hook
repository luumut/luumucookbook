#!/usr/bin/env python3

import os


BASE_URL = "https://github.com/luumut/luumucookbook/blob/master/"

def is_excluded(path):
    for e in [".git", "media"]:
        if e in path:
            return True

    return False


def remove_extension(filename):
    index = filename.find(".")
    return filename[0:index]


def create_links():
    # dict{ list[ tuple(name, link) ] }
    links = {}

    for root, subdirs, files in os.walk("."):

        if is_excluded(root) or root == ".":
            continue

        #print(f"{root} {subdirs} {files}")
        #print(root)

        link_list = []

        for file in files:
            #print(f"    {file}")

            name = remove_extension(file).title()
            link = BASE_URL + root[2:] +  "/" + file

            link_list.append((name, link))

            #print(link_list[-1])

        links[root] = link_list

    return links


def get_range(lines):
    begin = -1
    end = len(lines) - 1

    for x in range(len(lines)):

        if "# Sis√§llysluettelo".lower() in lines[x].lower():
            begin = x
            break

    for x in range(begin+1, len(lines)):

        if "#" in lines[x]:
            end = x
            break


    return begin, end


def create_table_of_contents(links):

    contents = []

    return contents


def main():
    with open("README.md") as f:
        lines = f.readlines()

    links = create_links()

    """
    for l in links:
        print(l)
        print(links[l])
    """

    begin, end = get_range(lines)

    print(begin, end)

    head = lines[0:begin]
    tail = lines[end+1:]

    print("head:")
    print(head)

    print("tail:")
    print(tail)

    contents = create_table_of_contents(links)

    new_lines = head + contents + tail


    # overwrite README



main()

